{
  "name": "tox-runner",
  "displayName": "Tox Runner",
  "description": "A simple test discovery and runner for tox environments.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BeardedPlatypus/vscode-tox-extension"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "python",
    "tox"
  ],
  "icon": "img/icon.png",
  "activationEvents": [
    "workspaceContains:tox.ini"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "taskDefinitions": [],
    "configuration": {
      "title": "Tox Runner",
      "properties": {
        "tox-runner.toxPath": {
          "type": ["string"],
          "default": "", 
          "description": "Specifies the path to the tox executable. If undefined it will use the PATH variable to resolve it."
        },
        "tox-runner.runInTerminal": {
          "type": ["boolean"],
          "default": 0,
          "description": "Specifies wether the tox tests should be run in the terminal or not. Defaults to false."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "tsc -p ./ && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
